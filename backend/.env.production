# 电梯备忘录系统 - 生产环境配置

# 环境配置
NODE_ENV=production
PORT=3000

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=elevator_memo
DB_USER=postgres
DB_PASSWORD=your_production_db_password_here

# JWT认证配置 - 请使用强密钥
JWT_SECRET=elevator_memo_production_jwt_secret_2024_secure_key
JWT_EXPIRES_IN=24h

# 文件上传配置
UPLOAD_PATH=/var/www/elevator-memo-system/backend/uploads
MAX_FILE_SIZE=10485760  # 10MB

# CORS配置（生产环境）
ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:80

# 安全配置
BCRYPT_ROUNDS=12

# 日志配置
LOG_LEVEL=info
LOG_PATH=/var/www/elevator-memo-system/backend/logs

# 数据库连接池配置
DB_POOL_MIN=2
DB_POOL_MAX=10

# 服务器配置
SERVER_HOST=0.0.0.0
FRONTEND_URL=https://yourdomain.com

# 邮件配置（可选 - 用于通知功能）
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_email_password
# SMTP_FROM=noreply@yourdomain.com